@using RiplTrackingSystem.Helpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-header">
    <nav class="breadcrumb-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Transactions</a></li>
        </ol>
    </nav>
    <div class="dropdown filter custom-dropdown-icon">
        <a class="dropdown-toggle btn" href="#" role="button" id="filterDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="text">More</span> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-down"><polyline points="6 9 12 15 18 9"></polyline></svg></a>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="filterDropdown">
            <a class="dropdown-item" id="export_transactions_report" data-value="<span>Show</span> : Export Transcations Report" href="@Url.Action("ExportTransactionsSheet","Transaction")">Export Transactions Report</a>
        </div>
    </div>
</div>


<div class="layout-px-spacing">
    <div class="row">
        <div class="form-group col-3">
            <input class="form-control" type="text" id="text_search" name="text_search" placeholder="Search">
        </div>
        <div class="form-group col-md-3">
            @Html.DropDownList("user_id", new SelectList(ViewBag.users, "id", "full_name"), "Select From User", new { @class = "form-control", @name = "user_id", @id = "user_id" })
        </div>
        <div class="form-group col-md-3">
            @Html.DropDownList("from_location_id", new SelectList(ViewBag.locations, "id", "name"), "From Location", new { @class = "form-control", @name = "from_location_id", @id = "from_location_id" })
        </div>
        <div class="form-group col-md-3">
            @Html.DropDownList("to_location_id", new SelectList(ViewBag.locations, "id", "name"), "To Location", new { @class = "form-control", @name = "to_location_id", @id = "to_location_id" })
        </div>

        <div class="form-group col-3">
            <input class="form-control" type="date" id="from_date" name="from_date">
        </div>
        <div class="form-group col-3">
            <input class="form-control" type="date" id="to_date" name="to_date">
        </div>
        <!-- bootstrap classes col-1 instead of col-2 -->
        <div class="form-group col-1">
            <button id="search" class="btn btn-primary px-3 radius-30">Search</button>
        </div>
        <div class="form-group col-1">
            <button id="reset" class="btn btn-danger px-3 radius-30">Reset</button>
        </div>


    </div>

    <div class="card">
        <div class="card-body">

            <div class="table-responsive">
                <table id="transcationsTable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th width="5%">From/To</th>
                            <th width="5%"># of Assets</th>
                            <th width="5%">Notes</th>
                            <th width="5%">Files</th>
                            <th width="5%">Created At</th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
       $(document).ready(function () {

           var datatable = $('#transcationsTable')
               .DataTable({
                   "dom": "<'dt--top-section'<'row'<'col-sm-12 col-md-6 d-flex justify-content-md-start justify-content-center'B><'col-sm-12 col-md-6 d-flex justify-content-md-end justify-content-center mt-md-0 mt-3'f>>>" +
                       "<'table-responsive'tr>" +
                       "<'dt--bottom-section d-sm-flex justify-content-sm-between text-center'<'dt--pages-count  mb-sm-0 mb-3'i><'dt--pagination'p>>",
                   "buttons": {
                       buttons: [
                           { extend: 'copy', className: 'btn btn-sm' },
                           { extend: 'csv', className: 'btn btn-sm' },
                           { extend: 'excel', className: 'btn btn-sm' },
                           { extend: 'print', className: 'btn btn-sm' }
                       ]
                   },
                   "oLanguage": {
                       "oPaginate": { "sPrevious": 'Perivous', "sNext": 'Next' },
                       "sInfo": "Showing page _PAGE_ of _PAGES_",
                       "sSearch": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>',
                       "sSearchPlaceholder": "Search...",
                       "sLengthMenu": "Results :  _MENU_",
                   },
                    "processing": true,
                    "serverSide": true,
                    "scrollX": true,
                    "stateSave": false,
                    "lengthChange": false,
                    "dom": 'Bfrtip',
                    "buttons": ['copy', 'excel', 'pdf', 'print'],
                    "pageLength":10,
                    "rowId": 'id',
                    "ajax": {
                        "url": "@Url.Action("Index", "Transaction")",
                        "type": "POST",
                        "datatype": "json",
                        "dataSrc": "data"
                    },
                    "columns": [
                        {
                            "data": "id",
                            "searchable": true
                        },
                        {
                            "data": "stringFromLocation", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "<b>From: </b>" + oData.stringFromLocation + "<br>";
                                html += "<b>To: </b>" + oData.stringToLocation + "<br>";
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "assetes_count",
                            "searchable": true
                        },
                        {
                            "data": "notes",
                            "searchable": true
                        },
                        {
                            "data": "attachments", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                var counter = 1;
                                if (oData.attachments.length != 0) {
                                    oData.attachments.forEach(function (value) {
                                        html += "<a href='" + value.path + "' target='_blank' style='text-decoration:underline;color: #4361ee'>Attachment" + counter + "</a>&nbsp;&nbsp;";/* style color Added by AA*/
                                        counter++;
                                    });
                                }
                                else {
                                    html += "No Attachments";
                                }
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "created_at", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                if (oData.working_date)
                                    html += "Working Date: " + oData.stringWorking_date+"<br>";
                                if (oData.created_at)
                                    html += "Created at: " + oData.stringCreated_at;

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },

                    ]
                });

            $('#search').on('click', function () {
                datatable.search($("#text_search").val());
                datatable.columns(0).search($("#user_id").val());
                datatable.columns(1).search($("#from_location_id").val());
                datatable.columns(2).search($("#to_location_id").val());
                datatable.columns(3).search($("#from_date").val());
                datatable.columns(4).search($("#to_date").val());
                
                datatable.draw();
            });

            $('#text_search').on('keyup', function (e) {
                if (e.keyCode == 13)
                    $('#search_button').trigger('click');
            });

            $('#reset').on('click', function () {
                $("#text_search").val("");
                $("#user_id").val("");
                $("#from_location_id").val("");
                $("#to_location_id").val("");
                $("#from_date").val("");
                $("#to_date").val("");
                $('#search').trigger('click');

            });



        });

    </script>
}

