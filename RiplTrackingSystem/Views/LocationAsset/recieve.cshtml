
@{
    ViewBag.Title = "Send Asset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="modal fade" id="recieve_assets_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <form action="" method="post" enctype='multipart/form-data'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal_title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-body">
                        <div class="form-row">
                            <input type="hidden" name="id" id="id" value="0" />
                            <input name="assets" id="assets" type="hidden" class="form-control radius-30" />

                            <div class="form-group col-md-6">
                                <label>Note</label>
                                <input type="text" name="notes" id="notes" class="form-control radius-30" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="modal fade" id="transcation_assets_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <form action="" method="post" enctype='multipart/form-data'>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal_title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-body">
                        <div class="form-row">

                            <div class="form-group col-md-12" id="asset_details_id">

                            </div>


                        </div>


                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="page-header">
    <nav class="breadcrumb-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Recieve Assets</a></li>
        </ol>
    </nav>
</div>


    <div class="row">
        <div class="form-group col-4">
            <input class="form-control" type="text" id="asset_id" name="asset_id" placeholder="Search">
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <table id="assetsTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>#</th>
                        <th>Type</th>
                        <th>Tall</th>
                    </tr>
                </thead>
                <tbody id="asset_body">
                </tbody>
            </table>
        </div>
    </div>
    <div class="card radius-15">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-3">
                    <button id="recieve" class="btn btn-primary px-3 radius-30">Recieve</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Transactions
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="transctionsTable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>From</th>
                            <th># of Assets</th>
                            <th>Received Assets</th>
                            <th>Notes</th>
                            <th>Created By</th>
                            <th>Created At</th>
                            <th></th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>

@section scripts
{
    <script>
        $(document).ready(function () {

            var transactionsTable = $('#transctionsTable')
                .DataTable({

                    "processing": true,
                    "serverSide": true,
                    "scrollX": true,
                    "stateSave": false,
                    "lengthChange": false,
                    "dom": 'Bfrtip',

                    "buttons": ['copy', 'excel', 'pdf', 'print'],
                    "pageLength":10,
                    "rowId": 'id',
                    "ajax": {
                        "url": "@Url.Action("recieve", "LocationAsset")",
                        "type": "POST",
                        "datatype": "json",
                        "dataSrc": "data"
                    },
                    "columns": [
                        {
                            "data": "id",
                            "searchable": true
                        },
                        {
                            "data": "stringFromLocation",
                            "searchable": true
                        },
                        {
                            "data": "assetes_count", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = '';
                                html += "<a class='assetDetails' href='javascript:void(0)' title='Show Assets'>" + oData.assetes_count + "</a>&nbsp;";

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "received_assets",
                            "searchable": true
                        },
                        {
                            "data": "notes",
                            "searchable": true
                        },
                        {
                            "data": "stringUser",
                            "searchable": true
                        },
                        {
                            "data": "stringCreated_at",
                            "searchable": true
                        }
                        ,
                        {
                            "data": "id", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                html += "<a class='send' href='/LocationAsset/openTransaction/" + oData.id +"' title='Open'><i class='fas fa-eye'></i></a>";

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        }

                        //},
                        //{
                        //    "data": "id", "searchable": true,
                        //    fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                        //        var html = "";

                        //        //html += "<a class='edit' id='" + oData.id + "' href='javascript:void(0)' title='Edit'><i class='lni lni-pencil'></i></a>&nbsp;";
                        //        html += "<a class='delete' id='" + oData.id + "' href='javascript:void(0)' title='Delete'><i class='fas fa-trash'></i></a>";

                        //        //if (oData.status == 1 && $('#can_receive').val() == 1) {
                        //        //    html += "<a class='receive' id='" + oData.id + "' href='javascript:void(0)' title='Receive'><i class='lni lni-checkmark'></i></a>&nbsp;";
                        //        //    html += "<a class='reject' id='" + oData.id + "' href='javascript:void(0)' title='Reject'><i class='lni lni-close'></i></a>&nbsp;";
                        //        //}
                        //        //if (oData.status == 2 && $('#can_send').val() == 1)
                        //        //    html += "<a class='send' id='" + oData.id + "' href='javascript:void(0)' title='Send'><i class='lni lni-fireworks'></i></a>";

                        //        $(nTd).html("<span class='action-column'>" + html + "</span>");
                        //    }
                        //},
                    ]
                });

            $("#asset_id").change(function () {
                var asset_id = $(this).val();
                $.ajax({
                        type: "GET",
                        url: '@Url.Action("checkRecieveAsset", "LocationAsset")',
                        contentType: "application/json; charset=utf-8",
                        data: { "tag_id": asset_id },
                        datatype: "json",
                    success: function (data) {
                        if (data.status == "success") {
                            var html = "<tr>";
                            html += "<td><input type='checkbox' checked class='checkedAsset' value='" + data.companyAssetRent.id + "'></td>";
                            html += "<td>" + data.asset.id + "</td>";
                            html += "<td>" + data.asset.type + "</td>";
                            html += "<td>" + data.asset.tall + "</td>";
                            html += "</tr>";

                            $("#asset_body").prepend(html);
                        }
                        else {
                            Swal.fire({
                                icon: "error",
                                title: "Not Found!",
                                text: "Asset maybe Lost"
                            });
                        }
                        $("#asset_id").val("");
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });

            });

            $("#recieve").click(function () {

                var checkedVals = $('.checkedAsset:checkbox:checked').map(function () {
                    return this.value;
                }).get();

                var modal = $('#recieve_assets_modal').clone();
                var action = '@Url.Action("recieveAssets", "LocationAsset")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Recieve Asset');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (data) {
                        Swal.fire({
                            icon: "success",
                            title: "Done",
                            text: "Asset has been sent"
                        });
                        transactionsTable.draw();
                        $("#asset_body").remove();
                        var html = '<tbody id="asset_body"></tbody>';
                        $("#assetsTable").append(html);


                }, function (response) {

                }, function (dialog) {
                        dialog.find('#assets').val(checkedVals.join(","));

                });
        });

            $(document).on("click", ".assetDetails", function () {
                var data = transactionsTable.row($(this).closest('tr')).data();
                console.log(data);
                var modal = $('#transcation_assets_modal').clone();
                modal.find('#modal_title').text('Asset Details');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {


                }, function (response) {

                }, function (dialog) {

                    data.assetsStatusAndLocation.forEach(function (value) {
                        var html = "";
                        if (value.status == 1)
                            html += "<span class='badge badge-info'>" + value.tag_id + " => Wating For Receive</span>&nbsp;";
                        else if (value.status == 2)
                            html += "<span class='badge badge-info'>" + value.tag_id + " => Received</span>&nbsp;";
                        else if (value.status == 3)
                            html += "<span class='badge badge-info'>" + value.tag_id + " => Lost</span>&nbsp;";

                        dialog.find("#asset_details_id").append(html);
                    });


                });
            });
        });
    </script>
}

