<div class="card topping-edit radius-15">
    <div class="card-body">
        <form id="filter_form" action="" method="post">
            <input id="location_report_type" name="location_report_type" type="hidden" />
            <div class="row">
                <div class="form-group col-3">
                    <input class="form-control" type="text" id="text_search" name="text_search" placeholder="Search">
                </div>
                <div class="form-group col-md-3">
                    @Html.DropDownList("location_id_search", new SelectList(ViewBag.locations, "id", "name"), "Select Location", new { @class = "form-control", @name = "location_id_search", @id = "location_id_search" })
                </div>
                <div class="form-group col-3">
                    <input class="form-control" type="date" id="date_form_search" name="date_form_search">
                </div>
                <div class="form-group col-3">
                    <input class="form-control" type="date" id="date_to_search" name="date_to_search">
                </div>
                <!-- bootstrap classes col and col-3 removed by AA -->
                <div class="form-group ">
                    <button id="search" type="button" class="btn btn-primary px-3 radius-30">Search</button>
                </div>
                <div class="form-group ">
                    <button id="reset" class="btn btn-danger px-3 radius-30">Reset</button>
                </div>

            </div>
        </form>
    </div>
</div>
<div class="row layout-top-spacing" id="cancel-row">

    <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
        <div class="widget-content widget-content-area br-6">
            <table id="locationsTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Asset Count</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Can Send Pluck</th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>

@section scripts
{
   
    <script>
        $(document).ready(function () {

           var datatable = $('#locationsTable')
               .DataTable({

                   "dom": "<'dt--top-section'<'row'<'col-sm-12 col-md-6 d-flex justify-content-md-start justify-content-center'B><'col-sm-12 col-md-6 d-flex justify-content-md-end justify-content-center mt-md-0 mt-3'f>>>" +
                       "<'table-responsive'tr>" +
                       "<'dt--bottom-section d-sm-flex justify-content-sm-between text-center'<'dt--pages-count  mb-sm-0 mb-3'i><'dt--pagination'p>>",
                   "buttons": {
                       buttons: [
                           { extend: 'copy', className: 'btn btn-sm' },
                           { extend: 'csv', className: 'btn btn-sm' },
                           { extend: 'excel', className: 'btn btn-sm' },
                           { extend: 'print', className: 'btn btn-sm' }
                       ]
                   },
                   "oLanguage": {
                       "oPaginate": { "sPrevious": 'Perivous', "sNext": 'Next' },
                       "sInfo": "Showing page _PAGE_ of _PAGES_",
                       "sSearch": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>',
                       "sSearchPlaceholder": "Search...",
                       "sLengthMenu": "Results :  _MENU_",
                   },
                   "processing": true,
                   "serverSide": true,
                   "scrollX": true,
                   "stateSave": false,
                   "lengthChange": false,
                   "dom": 'Bfrtip',
                   "pageLength": 10,
                   "rowId": 'id',
                    "ajax": {
                        "url": "@Url.Action("Index", "Location")",
                        "type": "POST",
                        "datatype": "json",
                        "dataSrc": "data"
                    },
                    "columns": [
                        {
                            "data": "id",
                            "searchable": true
                        },
                        {
                            "data": "name", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                html += "<a id='" + oData.id + "' href='/Location/Show?id=" + oData.id + "' title='Show'>" + oData.name + "</a>";

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "description",
                            "searchable": true
                        },
                        {
                            "data": "actual_number_of_assets", "actual_number_of_assets": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                html += "<b>Total Number Of Assets: </b>" + oData.number_of_assets;
                                html += "<br><b>Actual Number Of Assets: </b>" + oData.actual_number_of_assets;
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "phone",
                            "searchable": true
                        },
                        {
                            "data": "address",
                            "searchable": true
                        },
                        {
                            "data": "canSendPluck", "canSendPluck": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                if (oData.canSendPluck == 1)
                                    html += "<span class='badge badge-success'>Yes</span>";
                                else
                                    html += "<span class='badge badge-danger'>No</span>";
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "id", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                //html += "<a target='_blank' id='" + oData.id + "' href='/Location/ShowTree?id=" + oData.id + "' title='Show'><i class='lni lni-eye'></i></a>&nbsp;";
                                html += "<a href='/Location/Show?id=" + oData.id + "' title='Show'><i class='far fa-eye'></i></a>&nbsp;";
                                html += "<a class='addCompanyUser' href='javascript:void(0)' title='Add User'><i class='far fa-user'></i></a>&nbsp;| ";
                                html += "<a class='addFactory' href='javascript:void(0)' title='Add Factory'><i class='fas fa-industry'></i></a>&nbsp;";
                                html += "<a class='addStore' href='javascript:void(0)' title='Add Store'><i class='fas fa-box'></i></a>&nbsp;";
                                html += "<a class='addDistributor' href='javascript:void(0)' title='Add Distributor'><i class='fas fa-people-carry'></i></a>&nbsp;| ";
                                html += "<a class='edit'  href='javascript:void(0)' title='Edit'><i class='far fa-edit'></i></a>&nbsp;";
                                html += "<a class='delete'  href='javascript:void(0)' title='Delete'><i class='fas fa-trash'></i></a>";

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                    ]
               });


            $('#search').on('click', function () {
                datatable.search($("#text_search").val());
                datatable.columns(0).search($("#date_form_search").val());
                datatable.columns(1).search($("#date_to_search").val());
                datatable.columns(2).search($("#location_id_search").val());

                datatable.draw();
            });

            $('#text_search').on('keyup', function (e) {
                if (e.keyCode == 13)
                    $('#search_button').trigger('click');
            });

            $('#reset').on('click', function () {
                $("#text_search").val("");
                $("#date_form_search").val("");
                $("#date_to_search").val("");
                $("#location_id_search").val("");

                $('#search').trigger('click');

            });

            //$('#date-form').bootstrapMaterialDatePicker({
            //    time: false
            //});

            //$('#date-to').bootstrapMaterialDatePicker({
            //    time: false
            //});

           $(document).on("click", "#export_locations", function () {
               var action = '@Url.Action("LocationsReport", "Report")';
               $("#location_report_type").val(1);
               $("#filter_form").attr('action', action);
               $("#filter_form").submit();
           });
           $(document).on("click", "#export_locations_with_hierarchy", function () {
               var action = '@Url.Action("LocationsReport", "Report")';
               $("#location_report_type").val(2);
               $("#filter_form").attr('action', action);
               $("#filter_form").submit();
           });

           $("#add_location_group").click(function () {
               var modal = $('#manage_location_modal').clone();
                var action = '@Url.Action("saveLocation", "Location")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Add Location');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {
                        var locationHtml = "<option value='" + response.location.id + "'>" + response.location.name + "</option>";
                        $("#parent_id").append(locationHtml);
                        datatable.draw();

                }, function (response) {

                }, function (dialog) {
                        dialog.find('#type').val(1);
                });
            });

           $(document).on("click", ".addFactory", function () {

               var data = datatable.row($(this).closest('tr')).data();
               var modal = $('#manage_location_modal').clone();
                var action = '@Url.Action("saveLocation", "Location")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Add Factory');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {


                }, function (response) {

                }, function (dialog) {
                        dialog.find('#parent_id').val(data.id);
                        dialog.find('#type').val(2);
                        dialog.find('#can_send_pluck_div').hide();
                });
           });

           $(document).on("click", ".addStore", function () {

               var data = datatable.row($(this).closest('tr')).data();
               var modal = $('#manage_location_modal').clone();
                var action = '@Url.Action("saveLocation", "Location")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Add Store');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {


                }, function (response) {

                }, function (dialog) {
                        dialog.find('#parent_id').val(data.id);
                        dialog.find('#type').val(3);
                        dialog.find('#can_send_pluck_div').hide();

                });
           });

           $(document).on("click", ".addDistributor", function () {

               var data = datatable.row($(this).closest('tr')).data();
               var modal = $('#manage_location_modal').clone();
                var action = '@Url.Action("saveLocation", "Location")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Add Distributor');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {


                }, function (response) {

                }, function (dialog) {
                        dialog.find('#parent_id').val(data.id);
                        dialog.find('#type').val(4);
                        dialog.find('#can_send_pluck_div').hide();

                });
           });

            $(document).on("click", ".edit", function () {
                var data = datatable.row($(this).closest('tr')).data();

                console.log(data);
                var modal = $('#manage_location_modal').clone();
                var action = '@Url.Action("saveLocation", "Location")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Edit Location');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {
                        datatable.draw();

                }, function (response) {

                }, function (dialog) {
                        dialog.find('#id').val(data.id);
                        dialog.find('#name').val(data.name);
                        dialog.find('#description').val(data.description);
                        dialog.find('#address').val(data.address);
                        dialog.find('#phone').val(data.phone);
                        dialog.find('#type').val(data.type);
                        dialog.find('#can_send_pluck option[value=' + data.canSendPluck + ']').attr('selected', 'selected');

                });

            });

            $(document).on("click", ".delete", function () {
                var data = datatable.row($(this).closest('tr')).data();
                warningBox("Are you sure you want to delete this Location and childs if exist (<b>" + data.name +"</b>) ?", function () {
                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("deleteLocation", "Location")',
                        contentType: "application/json; charset=utf-8",
                        data: { "id": data.id },
                        datatype: "json",
                        success: function (data) {
                            datatable.draw();
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });
            });
           $(document).on('click', '.addCompanyUser', function () {
               var data = datatable.row($(this).closest('tr')).data();
               var modal = $('#manage_user_modal').clone();
                var action = '@Url.Action("saveUser", "User")';
                modal.find('form').attr('action', action);
               modal.find('#modal_title').text('Add User to: ' + data.name );
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {


                }, function (response) {

                }, function (dialog) {
                        dialog.find('#location_id').val(data.id);
                        $(document).on('change', '#image', function (event) {

                            var reader = new FileReader();
                            reader.onload = function () {
                                dialog.find('#imageProfile').attr('src', reader.result);
                            };
                            reader.readAsDataURL(event.target.files[0]);

                        });
                        $(document).on('keyup', '#user_name', function () {

                            var user_name = dialog.find('#user_name').val().length != 0 ? dialog.find('#user_name').val() : null;
                            if (user_name != null) {
                                $.ajax({
                                    type: "GET",
                                    url: '@Url.Action("checkUsernameAvailability", "User")',
                                    contentType: "application/json; charset=utf-8",
                                    data: {
                                        "user_name": user_name
                                    },
                                    datatype: "json",
                                    success: function (json) {
                                        console.log(json.message);
                                        if (json.is_valid == false) {

                                            dialog.find('#user_name_error').show();
                                            dialog.find('#user_name_valid').hide();
                                            dialog.find('#save').prop('disabled', true);

                                        }
                                        else {
                                            dialog.find('#user_name_error').hide();
                                            dialog.find('#user_name_valid').show();
                                            dialog.find('#save').prop('disabled', false);
                                        }


                                    },
                                    error: function () {
                                        //alert("Dynamic content load failed.");
                                    }
                                });
                            } else {
                                dialog.find('#user_name_error').show();
                                dialog.find('#user_name_valid').hide();
                                dialog.find('#save').prop('disabled', true);

                            }

                        });

                        dialog.find('#role_ids').selectize({
                            plugins: ['remove_button'],
                        });
                });
            });

        });

    </script>

}

