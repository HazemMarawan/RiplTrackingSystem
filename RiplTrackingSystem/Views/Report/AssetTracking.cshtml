
@{
    ViewBag.Title = "AssetTracking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-header">
    <nav class="breadcrumb-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Reports</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Assets Tracking</a></li>
        </ol>
    </nav>
</div>
<form action="@Url.Action("AssetsTrackingReport","Report")" method="post">
    <div class="row">
        <div class="form-group col-3">
            <input class="form-control" type="text" id="text_search" name="text_search" placeholder="Search">
        </div>
        <div class="form-group col-3">
            <input class="form-control" type="text" id="tag_id" name="tag_id" placeholder="Tag Id">
        </div>
        <div class="form-group col-3">
            <input class="form-control" type="text" id="asset_type" name="asset_type" placeholder="Type">
        </div>
        <div class="form-group col-3">
            <input class="form-control" type="text" id="asset_color" name="asset_color" placeholder="Color">
        </div>
        <div class="form-group col-md-3">
            @Html.DropDownList("from_location", new SelectList(ViewBag.from_locations, "id", "name"), "From Location", new { @class = "form-control", @name = "from_location", @id = "from_location" })
        </div>
        <div class="form-group col-md-3">
            @Html.DropDownList("to_location", new SelectList(ViewBag.to_locations, "id", "name"), "To Location", new { @class = "form-control", @name = "to_location", @id = "to_location" })
        </div>
        <div class="form-group col-3">
            <select name="asset_status" class="form-control">
                <option>Select Status</option>
                <option value="1">Waiting</option>
                <option value="2">Recieved</option>
                <option value="3">Lost</option>

            </select>
        </div>
        <div class="form-group col-3">
            <input class="form-control" type="date" id="from_date" name="from_date">
        </div>
        <div class="form-group col-3">
            <input class="form-control" type="date" id="to_date" name="to_date">
        </div>

        <div class="form-group">
            <button id="export" type="submit" class="btn btn-primary px-3 radius-30">Export</button>
        </div>
        <div class="form-group col-3">
            <button id="reset" class="btn btn-danger px-3 radius-30">Reset</button>
        </div>

    </div>
</form>
@section scripts
{
    <script>
        $(document).ready(function () {

            $('#reset').on('click', function () {
                $("#text_search").val("");
                $("#from_date").val("");
                $("#to_date").val("");

                $('#search').trigger('click');

            });
        });
    </script>
}

