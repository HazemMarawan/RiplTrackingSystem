@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="send_asset" tabindex="-1" role="dialog" aria-hidden="true">
    <form action="" method="post" enctype='multipart/form-data'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal_title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-body">
                        <div class="form-row">
                            <input type="hidden" name="id" id="id" value="0" />

                            <div class="form-group col-md-12">
                                @Html.DropDownList("location_id", new SelectList(ViewBag.locations, "id", "name"), "Select Location", new { @class = "selectize", @name = "location_id", @id = "location_id", @required = "required" })
                            </div>

                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </form>
</div>


<div class="page-header">
    <nav class="breadcrumb-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Track Assets</a></li>
        </ol>
    </nav>
    <div class="dropdown filter custom-dropdown-icon">
        <a class="dropdown-toggle btn" href="#" role="button" id="filterDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="text">More</span> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-down"><polyline points="6 9 12 15 18 9"></polyline></svg></a>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="filterDropdown">
            <a class="dropdown-item" id="export_tracking_assets_report" href="javascript:void(0);" data-value="<span>Show</span> : Export Tracking Assets Report">Export Tracking Assets Report</a>
        </div>
    </div>
</div>
<form action="" method="post" onkeydown="return event.key != 'Enter';" id="filter_form">
    <div class="row">
        <div class="form-group col-3">
            <input class="form-control" type="text" id="text_search" name="text_search" placeholder="Search">
        </div>
        <div class="form-group col-3">
            <input class="form-control" type="text" id="tag_id" name="tag_id" placeholder="Tag Id">
        </div>
        <div class="form-group col-3">
            <input class="form-control" type="text" id="asset_type" name="asset_type" placeholder="Type">
        </div>
        <div class="form-group col-3">
            <input class="form-control" type="text" id="asset_color" name="asset_color" placeholder="Color">
        </div>
        <div class="form-group col-md-3">
            @Html.DropDownList("from_location", new SelectList(ViewBag.from_locations, "id", "name"), "From Location", new { @class = "form-control", @name = "from_location", @id = "from_location" })
        </div>
        <div class="form-group col-md-3">
            @Html.DropDownList("to_location", new SelectList(ViewBag.to_locations, "id", "name"), "To Location", new { @class = "form-control", @name = "to_location", @id = "to_location" })
        </div>

        <div class="form-group col-3">
            <input class="form-control" type="date" id="from_date" name="from_date">
        </div>
        <div class="form-group col-3">
            <input class="form-control" type="date" id="to_date" name="to_date">
        </div>
        <div class="form-group col-3">
            <select name="asset_status" id="asset_status" class="form-control">
                <option value="">Select Status</option>
                <option value="1">Waiting</option>
                <option value="2">Recieved</option>
                <option value="3">Lost</option>

            </select>
        </div>
        <div class="form-group">
            <button id="search" type="button" class="btn btn-primary px-3 radius-30">Search</button>
        </div>
        <div class="form-group col-3">
            <button id="reset" class="btn btn-danger px-3 radius-30">Reset</button>
        </div>

    </div>
</form>
    <div class="card">
        <div class="card-body">
            <input type="hidden" id="can_receive" value="@ViewBag.can_receive" />
            <input type="hidden" id="can_send" value="@ViewBag.can_send" />

            <div class="table-responsive">
                <table id="manageAssetsTable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tag Id</th>
                            <th>Type</th>
                            <th>Color</th>
                            <th>From</th>
                            <th>Current Location</th>
                            <th>Status</th>
                            <th>Start Date</th>
                            <th>Due Date</th>
                            <th></th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
    @section scripts
{
        <script>
       $(document).ready(function () {

           var datatable = $('#manageAssetsTable')
                .DataTable({
                    "processing": true,
                    "serverSide": true,
                    "scrollX": true,
                    "stateSave": false,
                    "lengthChange": false,
                    "dom": 'Bfrtip',

                    "buttons": ['copy', 'excel', 'pdf', 'print'],
                    "pageLength":10,
                    "rowId": 'id',
                    "ajax": {
                        "url": "@Url.Action("Index", "ReceiveAsset")",
                        "type": "POST",
                        "datatype": "json",
                        "dataSrc": "data"
                    },
                    "columns": [
                        {
                            "data": "id",
                            "searchable": true
                        },
                        {
                            "data": "tag_id",
                            "searchable": true
                        },
                        {
                            "data": "type",
                            "searchable": true
                        },
                        {
                            "data": "color",
                            "searchable": true
                        },
                        {
                            "data": "from_location_string",
                            "searchable": true
                        },
                        {
                            "data": "to_location_name",
                            "searchable": true
                        },
                        {
                            "data": "status", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {

                                var html = "";
                                if (oData.status == 1)
                                    html += "<span class='badge badge-primary'> Wating For Receive</span>&nbsp;";
                                else if (oData.status == 2)
                                    html += "<span class='badge badge-success'> Received </span>&nbsp;";
                                else if (oData.status == 3)
                                    html += "<span class='badge badge-danger'> Lost </span>&nbsp;";

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "start_date", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                html = '';
                                if (oData.start_date != null) {
                                var num = parseInt(oData.start_date.replace(/[^0-9]/g, ""));
                                var date = new Date(num);

                                    html += date.toDateString();
                                }
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "due_date", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                html = '';
                                if (oData.due_date != null) {
                                    var num = parseInt(oData.due_date.replace(/[^0-9]/g, ""));
                                    var date = new Date(num);

                                    html += date.toDateString();
                                }
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "id", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                @*if (oData.status == 1 && $('#can_receive').val() == 1 && oData.to_location == '@ViewBag.currentLocation') {
                                    html += "<a class='receive' href='javascript:void(0)' title='Receive'><i class='fas fa-check'></i></a>&nbsp;";
                                    html += "<a class='reject' href='javascript:void(0)' title='Reject'><i class='fas fa-times'></i></a>&nbsp;";
                                }*@
                                if (oData.status == 3  && oData.from_location == '@ViewBag.currentLocation') {
                                    html += "<a class='restore' href='javascript:void(0)' title='Restore'><i class='fas fa-check'></i></a>&nbsp;";
                                }
                                @*if (oData.status == 2 && $('#can_send').val() == 1 && oData.to_location == @ViewBag.currentLocation)
                                    html += "<a class='send' href='javascript:void(0)' title='Send'><i class='fa fa-share'></i></a>";*@

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                    ]
                });

            $('#search').on('click', function () {
                datatable.search($("#text_search").val());
                datatable.columns(0).search($("#tag_id").val());
                datatable.columns(1).search($("#asset_type").val());
                datatable.columns(2).search($("#asset_color").val());
                datatable.columns(3).search($("#from_location").val());
                datatable.columns(4).search($("#to_location").val());
                datatable.columns(5).search($("#asset_status").val());
                datatable.columns(6).search($("#from_date").val());
                datatable.columns(7).search($("#to_date").val());

                datatable.draw();
            });

            $('#text_search').on('keyup', function (e) {
                if (e.keyCode == 13)
                    $('#search').trigger('click');
            });

            $('#reset').on('click', function () {
                $("#text_search").val("");
                $("#tag_id").val("");
                $("#asset_type").val("");
                $("#from_location").val("");
                $("#to_location").val("");
                $("#asset_status").val("");
                $("#from_date").val("");
                $("#to_date").val("");

                $('#search').trigger('click');

            });

            //$('#date-form').bootstrapMaterialDatePicker({
            //    time: false
            //});

            //$('#date-to').bootstrapMaterialDatePicker({
            //    time: false
            //});

           @*$("#add_permission").click(function () {
               var modal = $('#manage_permission_modal').clone();
                var action = '@Url.Action("savePermission", "Permission")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Add Permission');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {

                        datatable.draw();

                }, function (response) {

                }, function (dialog) {

                });
            });*@
           $(document).on("click", "#export_tracking_assets_report", function () {
                var action = '@Url.Action("AssetsTrackingReport", "Report")';
               $('#filter_form').attr('action', action);
               $('#filter_form').submit();
           });

           $(document).on("click", ".send", function () {
                var data = datatable.row($(this).closest('tr')).data();
                console.log(data);
               var modal = $('#send_asset').clone();
                var action = '@Url.Action("sendAsset", "ReceiveAsset")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Send Asset');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (data) {
                        Swal.fire({
                            icon: data.icon,
                            title: data.title,
                            text: data.text
                        });
                        datatable.draw();

                }, function (response) {

                }, function (dialog) {
                        dialog.find('#id').val(data.id);
                        var $select = dialog.find('#location_id').selectize({
                            plugins: ['remove_button'],
                        });
                        var selectize = $select[0].selectize;

                        if (data.to_location == data.to_location_company_id) {

                            selectize.addOption({ value: -1, text: 'Ripl' });
                            //selectize.addItem('Ripl');
                            //selectize.refreshOptions();
                        }
                });

            });

           $(document).on("click", ".receive", function () {
                var data = datatable.row($(this).closest('tr')).data();
               warningBox("Are you sure you want to receive this tag ?", function () {
                   console.log(data.id);
                  $.ajax({
                        type: "GET",
                      url: '/ReceiveAsset/receiveAsset/'+data.id,
                        contentType: "application/json; charset=utf-8",
                        //data: { "id": data.id, "action": 2 },
                        datatype: "json",
                        success: function (data) {
                            Swal.fire({
                                icon: data.icon,
                                title: data.title,
                                text: data.text
                            });
                            datatable.draw();
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });
           });

           $(document).on("click", ".restore", function () {
               var data = datatable.row($(this).closest('tr')).data();
               warningBox("Are you sure you want to restore this tag ?", function () {
                   console.log(data.id);
                   $.ajax({
                       type: "GET",
                       url: '/ReceiveAsset/restoreAsset/' + data.id,
                       contentType: "application/json; charset=utf-8",
                       datatype: "json",
                       success: function (data) {
                           Swal.fire({
                               icon: data.icon,
                               title: data.title,
                               text: data.text
                           });
                           datatable.draw();
                       },
                       error: function () {
                           alert("Dynamic content load failed.");
                       }
                   });
               });
           });

           $(document).on("click", ".reject", function () {
               var data = datatable.row($(this).closest('tr')).data();
                warningBox("Are you sure you want to reject this tag ?", function () {
                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("rejectAsset", "ReceiveAsset")',
                        contentType: "application/json; charset=utf-8",
                        data: { "id": data.id },
                        datatype: "json",
                        success: function (data) {
                            Swal.fire({
                                icon: data.icon,
                                title: data.title,
                                text: data.text
                            });
                            datatable.draw();
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });
           });

       });

        </script>
    }

