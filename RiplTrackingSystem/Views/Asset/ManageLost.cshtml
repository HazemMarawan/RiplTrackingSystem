@{
    ViewBag.Title = "Manage Lost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <nav class="breadcrumb-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Manage Lost</a></li>
        </ol>
    </nav>
    <div class="dropdown filter custom-dropdown-icon">
        <a class="dropdown-toggle btn" href="#" role="button" id="filterDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="text">More</span> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-down"><polyline points="6 9 12 15 18 9"></polyline></svg></a>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="filterDropdown">
            <a class="dropdown-item" id="export_lost_assets_report" data-value="<span>Show</span> : Export Lost Assets Report" href="@Url.Action("ExportLostAssetsSheet","Asset")">Export Lost Assets Report</a>
        </div>
    </div>
</div>

    <div class="row">
        <div class="form-group col-4">
            <input class="form-control" type="text" id="text_search" name="text_search" placeholder="Search">
        </div>

        <div class="form-group col-2">
            <button id="search" class="btn btn-primary px-3 radius-30">Search</button>
        </div>
        <div class="form-group col-2">
            <button id="reset" class="btn btn-danger px-3 radius-30">Reset</button>
        </div>

    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="manageLostAssetsTable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tag Id</th>
                            <th>Type</th>
                            <th>Tall</th>
                            <th>From</th>
                            <th>Current Location</th>
                            <th>Status</th>
                            <th>Start Date</th>
                            <th>Due Date</th>
                            <th></th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
@section scripts
{
    <script>
       $(document).ready(function () {

           var datatable = $('#manageLostAssetsTable')
                .DataTable({
                    "processing": true,
                    "serverSide": true,
                    "scrollX": true,
                    "stateSave": false,
                    "lengthChange": false,
                    "dom": 'Bfrtip',

                    "buttons": ['copy', 'excel', 'pdf', 'print'],
                    "pageLength":10,
                    "rowId": 'id',
                    "ajax": {
                        "url": "@Url.Action("ManageLost", "Asset")",
                        "type": "POST",
                        "datatype": "json",
                        "dataSrc": "data"
                    },
                    "columns": [
                        {
                            "data": "id",
                            "searchable": true
                        },
                        {
                            "data": "tag_id",
                            "searchable": true
                        },
                        {
                            "data": "type",
                            "searchable": true
                        },
                        {
                            "data": "tall",
                            "searchable": true
                        },
                        {
                            "data": "from_location_string",
                            "searchable": true
                        },
                        {
                            "data": "to_location_name",
                            "searchable": true
                        },
                        {
                            "data": "status", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {

                                var html = "";
                                if (oData.status == 1)
                                    html += "<span class='badge badge-info'> Wating For Receive</span>&nbsp;";
                                else if (oData.status == 2)
                                    html += "<span class='badge badge-info'> Received </span>&nbsp;";
                                else if (oData.status == 3)
                                    html += "<span class='badge badge-info'> Lost </span>&nbsp;";

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "start_date", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                html = '';
                                if (oData.start_date != null) {
                                var num = parseInt(oData.start_date.replace(/[^0-9]/g, ""));
                                var date = new Date(num);

                                    html += date.toDateString();
                                }
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "due_date", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                html = '';
                                if (oData.due_date != null) {
                                    var num = parseInt(oData.due_date.replace(/[^0-9]/g, ""));
                                    var date = new Date(num);

                                    html += date.toDateString();
                                }
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "id", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {

                                var html = "";
                                html += "<a class='restore' href='javascript:void(0)' title='Restore'><i class='fas fa-check'></i></a>&nbsp;";

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                    ]
                });

            $('#search').on('click', function () {
                datatable.search($("#text_search").val());
                datatable.columns(0).search($("#status").val());
                //datatable.columns(1).search($("#date-to").val());
                datatable.draw();
            });

            $('#text_search').on('keyup', function (e) {
                if (e.keyCode == 13)
                    $('#search').trigger('click');
            });

            $('#reset').on('click', function () {
                $("#text_search").val("");

                $('#search').trigger('click');

            });

           $(document).on("click", ".restore", function () {
               var data = datatable.row($(this).closest('tr')).data();
               warningBox("Are you sure you want to restore this tag ?", function () {
                   console.log(data.id);
                   $.ajax({
                       type: "GET",
                       url: '/ReceiveAsset/restoreAsset/' + data.id,
                       contentType: "application/json; charset=utf-8",
                       datatype: "json",
                       success: function (data) {
                           Swal.fire({
                               icon: data.icon,
                               title: data.title,
                               text: data.text
                           });
                           datatable.draw();
                       },
                       error: function () {
                           alert("Dynamic content load failed.");
                       }
                   });
               });
           });
       });

    </script>
}

