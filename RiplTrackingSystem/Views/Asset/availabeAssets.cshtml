@model IEnumerable<RiplTrackingSystem.Models.Asset>
@{
    ViewBag.Title = "availabeAssets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <nav class="breadcrumb-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Available Assets</a></li>
        </ol>
    </nav>
    <div class="dropdown filter custom-dropdown-icon">
        <a class="dropdown-toggle btn" href="#" role="button" id="filterDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="text">More</span> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-down"><polyline points="6 9 12 15 18 9"></polyline></svg></a>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="filterDropdown">
            <a class="dropdown-item" id="export_asset_report" data-value="<span>Show</span> : Export Available Assets Report" href="@Url.Action("ExportAvailableAssetsSheet","Asset")">Export Available Assets Report</a>
        </div>
    </div>
</div>


<div class="row">
    <div class="form-group col-4">
        <input class="form-control" type="text" id="text_search" name="text_search" placeholder="Search">
    </div>


    <div class="form-group col-3">
        <button id="search" class="btn btn-primary px-3 radius-30">Search</button>
    </div>
    <div class="form-group col-3">
        <button id="reset" class="btn btn-danger px-3 radius-30">Reset</button>
    </div>

</div>

<div class="row layout-top-spacing" id="cancel-row">

    <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
        <div class="widget-content widget-content-area br-6">
            <table id="availableAssetsTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tag</th>
                        <th>Tall</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var assets in Model)
                    {
                        <tr>
                            <td>@assets.id</td>
                            <td>@assets.tag_id</td>
                            <td>@assets.tall</td>
                            <td>@assets.type</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
